@model IEnumerable<shoppingAPP_MVC_EFCore.Models.EF.Order>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ODate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OP)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ODate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OP.PId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.OId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.OId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
